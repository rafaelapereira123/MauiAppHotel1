<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel1.Views.CadastroEvento"
             Title="Cadastro de Evento"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="{StaticResource Gray100}">
 

    <ScrollView>

        <VerticalStackLayout Padding="20" Spacing="15">
            <Label 
                Text="Cadastro do Evento"
                TextColor="{StaticResource DarkBlue}"
                FontSize="50"
                FontFamily="Lora-Bold"
                />
            <HorizontalStackLayout HorizontalOptions="StartAndExpand">
                <Label Text="Nome do evento"/>
                <Entry Placeholder="Nome do evento"
                   Text="{Binding Nome}" />
            </HorizontalStackLayout>

            <HorizontalStackLayout HorizontalOptions="FillAndExpand">
                <Label Text="Data Início:" />
                <DatePicker x:Name="dtpck_datainicio"
                Format="dd/MM/yyyy" />
            </HorizontalStackLayout>


            <HorizontalStackLayout HorizontalOptions="FillAndExpand">
                <Label Text="Data Término:" />
                <DatePicker x:Name="dtpck_datatermino"
                Format="dd/MM/yyyy" />
            </HorizontalStackLayout>

            <HorizontalStackLayout>
                <Label Text="Número de Participantes"/>
                <Entry Placeholder="Número de participantes"
                   Keyboard="Numeric"
                   Text="{Binding NumeroParticipantes}" />
            </HorizontalStackLayout>

            <HorizontalStackLayout>
                <Label Text="Local do Evento"/>
                <Entry Placeholder="Local do evento"
                   Text="{Binding Local}" />
            </HorizontalStackLayout>

            <HorizontalStackLayout>
                <Label Text="Custo por Participante"/>
                <Entry Placeholder="Custo por participante"
                   Keyboard="Numeric"
                   Text="{Binding CustoPorParticipante}" />
            </HorizontalStackLayout>

            <Button Text="Cadastrar Evento"
                    Clicked="CadastrarEvento_Clicked"
                    BackgroundColor="{StaticResource DarkBlue}"
                    TextColor="White"
                    CornerRadius="20"
                    Margin="0,10,0,0"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
