<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel1.Views.HospedagemContratada"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="{StaticResource DarkBlue}">
    <VerticalStackLayout VerticalOptions="Center">
        <Label Text="{Binding QuartoSelecionado.Descricao}"
               TextColor="{StaticResource White}"
               FontFamily="Lora-Bold"
               FontSize="50"
               HorizontalTextAlignment="Center"/>

        <Frame Margin="10">
            <StackLayout Orientation="Horizontal">
                <HorizontalStackLayout HorizontalOptions="CenterAndExpand">
                    <Label Text=" Adultos: "/>
                    <Label Text="{Binding QntAdultos}" 
                           TextColor="{StaticResource DarkBlue}"/>


                </HorizontalStackLayout>

                <HorizontalStackLayout HorizontalOptions="CenterAndExpand">
                    <Label Text=" CrianÃ§as: "/>
                    <Label Text="{Binding QntCriancas}" 
                           TextColor="{StaticResource DarkBlue}"/>
                </HorizontalStackLayout>
            </StackLayout>
        </Frame>
        <Frame Margin="10">
            <Grid ColumnDefinitions="*, *, *"
             RowDefinitions="Auto, Auto">
                <Label Grid.Row="0" Grid.Column="0" Text="Check-in:"/>
                <Label Grid.Row="0" Grid.Column="1" Text="Check-out:"/>
                <Label Grid.Row="0" Grid.Column="2" Text="Estadia:"/>

                <Label Grid.Row="1" Grid.Column="0" 
                 Text="{Binding DataCheckIn, StringFormat='{}{0:dd/MM/yyyy}'}"
                 TextColor="{StaticResource DarkBlue}"/>
                <Label Grid.Row="1" Grid.Column="1"
                 Text="{Binding DataCheckOut, StringFormat='{}{0:dd/MM/yyyy}'}"
                 TextColor="{StaticResource DarkBlue}"/>
                <Label Grid.Row="1" Grid.Column="2" 
                 Text="{Binding Estadia}"
                 TextColor="{StaticResource DarkBlue}"/>

 


            </Grid>
        </Frame>
        <Frame Margin="10">

            <HorizontalStackLayout HorizontalOptions="CenterAndExpand">

                <Label Text="Valor total: "/>
                <Label Text="{Binding ValorTotal,StringFormat='{}{0:c}'}"
                       TextColor="{StaticResource DarkBlue}"/>
            </HorizontalStackLayout>
        </Frame>
        <Button Text="Voltar"
         BackgroundColor="{StaticResource White}"
        TextColor="DarkBlue"
        HorizontalOptions="Center"
        Clicked="Button_Clicked"/>
    </VerticalStackLayout>
</ContentPage>